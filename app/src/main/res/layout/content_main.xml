<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true">


    <TextView
        android:layout_marginTop="52dp"
        android:id="@+id/txtpet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/minecraftia"
        android:text="PET THE TURTLE!"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <TextView
        android:layout_below="@id/txtpet"
        android:id="@+id/txt_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/minecraftia"
        android:text="Number of pets"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:layout_marginTop="12dp"
        android:layout_below="@id/txt_head"
        android:id="@+id/txt_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/minecraftia"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <ImageButton
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_turtle"
        android:layout_width="156dp"
        android:layout_height="196dp"
        android:background="?android:attr/selectableItemBackground"
        android:cropToPadding="true"
        app:srcCompat="@drawable/ic_turtle" />
</RelativeLayout>
